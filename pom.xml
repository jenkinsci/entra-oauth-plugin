  <groupId>io.jenkins.plugins</groupId>
  <artifactId>entra-oauth</artifactId>
  <version>${changelist}</version>
  <packaging>hpi</packaging>

  <name>Microsoft Entra OAuth Credentials Plugin</name>
  <url>https://github.com/jenkinsci/entra-oauth-plugin-plugin</url>

  <licenses>
    <license>
      <name>MIT</name>
      <url>https://opensource.org/license/mit</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:https://github.com/jenkinsci/entra-oauth-plugin-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:jenkinsci/entra-oauth-plugin-plugin.git</developerConnection>
    <tag>${scmTag}</tag>
    <url>https://github.com/jenkinsci/entra-oauth-plugin-plugin</url>
  </scm>

  <properties>
    <revision>0.1</revision>
    <jenkins.baseline>2.541</jenkins.baseline>
    <jenkins.version>${jenkins.baseline}.1</jenkins.version>
    <changelist>999999-SNAPSHOT</changelist>
    <hpi.strictBundledArtifacts>true</hpi.strictBundledArtifacts>
    <ban-commons-lang-2.skip>false</ban-commons-lang-2.skip>
    <ban-junit4-imports.skip>false</ban-junit4-imports.skip>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.jenkins.tools.bom</groupId>
        <artifactId>bom-${jenkins.baseline}.x</artifactId>
        <version>6055.v35edb_dc8d0f9</version>
        <type>pom</type>
